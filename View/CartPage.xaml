<Page
    x:Class="Store.View.CartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    
    xmlns:local="using:Store.View"
    xmlns:model="using:Store.Model"    
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="MainGrid">
        
        <Button x:Name="BackButton"
                Margin="15"
                Grid.Column="0"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Click="BackButton_Click"
                Background="{StaticResource SystemControlAcrylicElementBrush}"
                IsEnabled="{x:Bind Frame.CanGoBack, Mode=OneWay}" 
                ToolTipService.ToolTip="Back">

            <Button.KeyboardAccelerators>
                <KeyboardAccelerator Key="Z" Modifiers="Control"/>
            </Button.KeyboardAccelerators>

            <FontIcon Glyph="&#xE72B;" />
        </Button>

        <Grid VerticalAlignment="Center"
              HorizontalAlignment="Center"
              Background="{StaticResource CardBackgroundFillColorDefaultBrush}"
              Width="900"
              Height="900"
              CornerRadius="{StaticResource OverlayCornerRadius}">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Added to cart"
                       Style="{StaticResource TitleLargeTextBlockStyle}"
                       Margin="24"/>

            <ListView x:Name="ProductList" 
                      Grid.Row="1"
                      SelectionMode="None"/>

            <ListView x:Name="CheckListView"
                      Grid.Column="1"
                      Grid.Row="1">
                
                <ListView.Header>
                    <controls:DataTable>
                        <controls:DataColumn/>

                        <controls:DataColumn/>
                        
                        <controls:DataColumn/>
                    </controls:DataTable>
                </ListView.Header>
            </ListView>


        </Grid>
    </Grid>
</Page>
