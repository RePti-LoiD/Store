<Page
    x:Class="Store.View.ProductPage"
    xmlns:viewModelData="using:Store.ViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:local="using:Store.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel x:Name="ImageContainer" Padding="50, 200, 50, 200" Grid.Column="0" Spacing="8">
            <FlipView x:Name="ImageFlipView" Height="700">
                <Image Source="/Resources/chocolate_cake.jpg" Stretch="UniformToFill"/>
                <Image Source="/Resources/chocolate_cake_2.jpg" Stretch="UniformToFill"/>
                <Image Source="/Assets/StoreLogo.png" Stretch="UniformToFill"/>
                <Image Source="/Resources/chocolate_cake_3.jpg" Stretch="UniformToFill"/>
            </FlipView>

            <muxc:PipsPager
                HorizontalAlignment="Center"
                NumberOfPages="{x:Bind ImageFlipView.Items.Count}"
                SelectedPageIndex="{x:Bind ImageFlipView.SelectedIndex, Mode=OneWay}"
                SelectedIndexChanged="PipsPager_SelectedIndexChanged"/>
        </StackPanel>

        <RelativePanel x:Name="ProductDataContainer" Padding="50, 200, 50, 200" Grid.Column="1" Background="{StaticResource CardBackgroundFillColorDefaultBrush}">
            
            <StackPanel x:Name="ProductHeader">
                <TextBlock Text="{x:Bind productViewModel.Name}" Style="{StaticResource DisplayTextBlockStyle}"/>

                <StackPanel Orientation="Horizontal" Spacing="5">

                    <TextBlock 
                        Text="{x:Bind productViewModel.Category}" 
                        VerticalAlignment="Center"
                        Style="{StaticResource BodyStrongTextBlockStyle}"/>

                    <Border 
                        Background="{StaticResource CardBackgroundFillColorSecondaryBrush}" 
                        Width="2" 
                        VerticalAlignment="Stretch"/>

                    <TextBlock 
                        Text="{x:Bind productViewModel.Provider}" 
                        VerticalAlignment="Center"
                        Style="{StaticResource BodyStrongTextBlockStyle}"
                        Foreground="{StaticResource TextFillColorTertiaryBrush}"/>

                </StackPanel>
            </StackPanel>

            <StackPanel
                Margin="0 15 0 0"
                RelativePanel.Below="ProductHeader"
                Background="{StaticResource SmokeFillColorDefaultBrush}" 
                Width="400"
                Height="400"
                CornerRadius="{StaticResource OverlayCornerRadius}">
                
            </StackPanel>
        </RelativePanel>
    </Grid>
</Page>
