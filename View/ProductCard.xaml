<UserControl
    x:Class="Store.View.ProductCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Store.View"
    xmlns:helpers="using:Store.Helpers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <helpers:CostConverter x:Key="CostConverter"/>
    </UserControl.Resources>
    
    <Grid
        PointerReleased="Grid_PointerReleased"
        CornerRadius="{StaticResource OverlayCornerRadius}"
        Width="250" 
        Height="350">

        <Grid.RowDefinitions>
            <RowDefinition Height="250"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image x:Name="Backdrop" Grid.Row="0" Stretch="UniformToFill">
            <Image.Source>
                <BitmapImage UriSource="{x:Bind Product.Pictures[0]}"/>
            </Image.Source>
        </Image>

        <Border Background="{StaticResource SystemControlAcrylicElementBrush}"/>

        <Border 
            Grid.Row="0"
            Margin="45"
            CornerRadius="8">
            <Image Stretch="UniformToFill">
                <Image.Source>
                    <BitmapImage UriSource="{x:Bind Product.Pictures[0]}"/>
                </Image.Source>
            </Image>
        </Border>

        <Grid 
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            Background="{StaticResource CardBackgroundFillColorDefaultBrush}">

            <TextBlock Margin="10" Text="{x:Bind Product.Name, Mode=OneWay}" Style="{StaticResource SubtitleTextBlockStyle}"/>

            <Border
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                CornerRadius="{StaticResource ControlCornerRadius}"
                Margin="16"
                Padding="7"
                Background="{StaticResource SystemAccentColor}">

                <TextBlock 
                    Text="{x:Bind Product.Cost, Converter={StaticResource CostConverter}}" 
                    Style="{StaticResource BodyStrongTextBlockStyle}"
                    Foreground="{StaticResource TextOnAccentFillColorPrimaryBrush}"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>
