<UserControl
    x:Class="Store.View.ProductCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Store.View"
    xmlns:helpers="using:Store.Helpers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <helpers:CostConverter x:Key="CostConverter"/>
        <helpers:ObjectToStringConverter x:Key="ToString"/>
    </UserControl.Resources>
    
    <Grid PointerReleased="Grid_PointerReleased" 
          CornerRadius="{StaticResource OverlayCornerRadius}"
          Width="250" 
          Height="350">

        <Grid.RowDefinitions>
            <RowDefinition Height="250"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image x:Name="Backdrop" 
               Grid.Row="0" 
               Stretch="UniformToFill">
            <Image.Source>
                <BitmapImage UriSource="{x:Bind Product.Pictures[0]}"/>
            </Image.Source>
        </Image>

        <Border Background="{StaticResource SystemControlAcrylicElementBrush}"/>

        <Border Grid.Row="0" 
                Margin="45"
                CornerRadius="8">
            
            <Image x:Name="ProductCardImage" Stretch="UniformToFill">
                <Image.Source>
                    <BitmapImage UriSource="{x:Bind Product.Pictures[0]}"/>
                </Image.Source>
            </Image>
        </Border>
        
        <Grid Grid.Row="1" 
              HorizontalAlignment="Stretch"
              Background="{StaticResource CardBackgroundFillColorDefaultBrush}">

            <TextBlock Margin="10" 
                       Text="{x:Bind Product.Name, Mode=OneWay}" 
                       Style="{StaticResource SubtitleTextBlockStyle}"/>

            <Button Style="{StaticResource AccentButtonStyle}"
                    Margin="16"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Click="AddButtonClick"
                    Visibility="{x:Bind ButtonVisibility, Mode=OneWay}">

                <StackPanel Orientation="Horizontal" 
                            Spacing="4">
                    
                    <FontIcon Glyph="&#xE7BF;"/>
                    <TextBlock Text="{x:Bind Product.Cost, Converter={StaticResource CostConverter}}" 
                               Style="{StaticResource BodyStrongTextBlockStyle}"/>
                </StackPanel>
                
            </Button>

            <StackPanel Spacing="10"
                        Margin="16"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        Visibility="{x:Bind AppenderVisibility, Mode=OneWay}">
                <Button Style="{StaticResource AccentButtonStyle}"
                        Click="DecrementButtonClick">
                    <FontIcon Glyph="&#xE738;" 
                              FontSize="12"/>
                </Button>

                <TextBlock VerticalAlignment="Center" 
                           Text="{x:Bind ProductInCartCount, Mode=OneWay}"
                           Style="{StaticResource BodyStrongTextBlockStyle}"/>

                <Button Style="{StaticResource AccentButtonStyle}"
                        Click="IncrementButtonClick">
                    <FontIcon Glyph="&#xE710;" 
                              FontSize="12"/>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
